@model RegistrationDto

@{
    ViewData["Title"] = "Registration Page";

}



<h1>@ViewData["Title"]</h1>



<form asp-route="RegistrationEndpoint" method="post" enctype="multipart/form-data">
    <div class="custom-file">
        <label class="custom-file-label" for="customFile">Avatar Image</label>
        <input name="Image" type="file" class="custom-file-input" id="customFile">
        <span class="d-block text-danger" asp-validation-for="Image"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" for="exampleInputEmail1">Name</label>
        <input asp-for="Name" type="text" class="form-control" style="width: 519px;">
        <span class="d-block text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname" for="exampleInputEmail1">Surname</label>
        <input asp-for="Surname" type="text" class="form-control" style="width: 519px;">
        <span class="d-block text-danger" asp-validation-for="Surname"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" for="exampleInputEmail1">Email address</label>
        <input asp-for="Email" type="text" class="form-control" style="width: 519px;">
        <span class="d-block text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" for="exampleInputPassword1">Password</label>
        <input asp-for="Password" type="password" class="form-control" style="width: 519px;">
        <span class="d-block text-danger" asp-validation-for="Password"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
