@if (base.Model != null)
{
    <div class="film-with-rate"></div>
    <div style="width: 1140px; margin: 0 auto;">

        <div class="film-image-background" style="background-image: url('/Film/Image/@base.Model.Id');background-size: contain; background-position: left; background-repeat: no-repeat;">

            <div class="film-name" style="color: #FFFFFF; font-size: 35px; padding-top: 120px; padding-left:25px">
                @base.Model.Name</div>
            <div style="font-size: 14px; color: #FFFFFFB3; font-size: 14px; padding-top: 25px; padding-left:25px">Presentation
                Date: @base.Model.PresentationDate.Year</div>
            @if (base.Model.Rate > 4)
            {
                <div style="font-size: 25px; color: #FFFFFFB3; font-size: 14px; padding-top: 25px; padding-left:25px">WatchPlus
                    Rating: <img src="Assets/IMG/rate-star.png" style="height: 30px; width: 30px;"> <img
                        src="Assets/IMG/rate-star.png" style="height: 30px; width: 30px;"> <img src="Assets/IMG/rate-star.png"
                        style="height: 30px; width: 30px;"> <img src="Assets/IMG/rate-star.png" style="height: 30px; width: 30px;">
                    <img src="Assets/IMG/rate-star.png" style="height: 30px; width: 30px;">
                </div>
            }
            else if (base.Model.Rate <= 4 && base.Model.Rate > 3)
            {
                <div style="font-size: 25px; color: #FFFFFFB3; font-size: 14px; padding-top: 25px; padding-left:25px">WatchPlus
                    Rating:
                    <img src="Assets/IMG/rate-star.png" style="height: 30px; width: 30px;"> <img src="Assets/IMG/rate-star.png"
                        style="height: 30px; width: 30px;"> <img src="Assets/IMG/rate-star.png" style="height: 30px; width: 30px;">
                    <img src="Assets/IMG/rate-star.png" style="height: 30px; width: 30px;">
                </div>
            }
            else if (base.Model.Rate <= 3 && base.Model.Rate > 2)
            {
                <div style="font-size: 25px; color: #FFFFFFB3; font-size: 14px; padding-top: 25px; padding-left:25px">WatchPlus
                    Rating:
                    <img src="Assets/IMG/rate-star.png" style="height: 30px; width: 30px;"> <img src="Assets/IMG/rate-star.png"
                        style="height: 30px; width: 30px;"> <img src="Assets/IMG/rate-star.png" style="height: 30px; width: 30px;">
                </div>
            }
            else if (base.Model.Rate <= 2 && base.Model.Rate > 1)
            {
                <div style="font-size: 25px; color: #FFFFFFB3; font-size: 14px; padding-top: 25px; padding-left:25px">WatchPlus
                    Rating:
                    <img src="Assets/IMG/rate-star.png" style="height: 30px; width: 30px;"> <img src="Assets/IMG/rate-star.png"
                        style="height: 30px; width: 30px;">
                </div>
            }
            else
            {
                <div style="font-size: 25px; color: #FFFFFFB3; font-size: 14px; padding-top: 25px; padding-left:25px">WatchPlus
                    Rating:
                    <img src="Assets/IMG/rate-star.png" style="height: 30px; width: 30px;">
                </div>
            }


            <div style="color: rgb(222, 210, 210); font-size: 25px; padding-top: 25px; padding-left:25px; width: 300px">
                @base.Model.Presentation</div>

                <div style="padding-left: 25px; padding-bottom: 100px;">

                    <form asp-controller="Film" asp-action="InfoAboutFilmAsync" asp-route-id="@base.Model.Id" method="get">
                        <input type="hidden" name="_method" value="INFO" />
                        <button type="submit" class="btn btn-warning" style="margin-top: 50px; margin-bottom:50px; width: 150px; border-radius: 10px; background-color: rgb(235, 235, 98);">Info</button>
                    </form>
                </div>
        </div>
    </div>
}
