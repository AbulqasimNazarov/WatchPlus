@model IEnumerable<Film>


@{
    ViewData["Title"] = "Get All Films";
    var IsAdmin = User.IsInRole("Admin");
}

<div style="width: 1140px; margin: 0 auto; display: flex; justify-content: space-between; flex-wrap: wrap;">
    @foreach (var film in base.Model)
    {
        <div class="card"
            style="display: inline-block; width: 18rem; margin-right: 20px; margin-top:25px; margin-bottom: 25px; background-color: rgb(245, 239, 239);box-shadow: 0px 0px 10px rgba(88, 88, 88, 0.25);">
            <img src="/Film/Image/@film.Id" class="card-img-top" alt="filmImage" style="height: 240px;">
            <div class="card-body">
                <h2 class="card-title">@film.Name</h2>
                <p class="card-text">@film.Presentation</p>
                <p class="card-text">
                <h6>Star: </h6><a href="https://ru.wikipedia.org/wiki/@film.Star">@film.Star</a>
                </p>
                <form asp-controller="Film" asp-action="InfoAboutFilmAsync" asp-route-id="@film.Id" method="get">
                    <input type="hidden" name="_method" value="INFO" />
                    <button type="submit" class="btn btn-warning" style="margin-top: 50px; margin-bottom:50px; width: 150px;
                    background-color: rgb(235, 235, 98); border-radius: 10px">Info</button>
                </form>
                
                @if (IsAdmin)
                {
                    <form asp-controller="Film" asp-action="DeleteFilm" asp-route-id="@film.Id" method="post">
                        <input type="hidden" name="_method" value="DELETE" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                }
            </div>
        </div>
    }
</div>
